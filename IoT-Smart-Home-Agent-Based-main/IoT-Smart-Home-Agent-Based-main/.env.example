# Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="IoT Smart Home Agent Platform"
DEBUG=false
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# Hardware Mode
# Options: AUTO (try Arduino, fallback to Simulation)
#          ARDUINO (require real hardware)
#          SIMULATION (force virtual hardware)
IOT_MODE=AUTO
SERIAL_PORT=
BAUD_RATE=9600

# OpenAI (Required for voice commands)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Telemetry
TELEMETRY_BROADCAST_INTERVAL=1.0
